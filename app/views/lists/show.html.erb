<% content_for :sidebar do %>
  <%= render partial: 'shared/user_lists' %>
<% end %>

<%= render partial: 'shared/list', locals: { list: @list } %>

<% if authorized? %>
  <div class='add-items-wrapper'>
    <a href='/lists/<%= params[:id] %>/items/new' class='btn btn-default add-items'>
      Add
      <span class='pull-right'>
        <i class="fa fa-plus"></i>
      </span>
    </a>
  </div>
  <%#= link_to 'Add Items', new_list_item_path(params[:id]), class: 'btn btn-default add-items' %>
<% end %>
