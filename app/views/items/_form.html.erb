<%= form_for @item, url: url, method: method, role: 'form', class: 'form' do |f| %>
  <div class="form-group">
    <%= f.label :section, 'Section:' %>
    <%= f.select(:section, @sections, { include_blank: 'pick a section...' }, { class: 'form-control', required: true }) %>
  </div>
  <div class="form-group">
    <%= f.label :category, 'Category:' %>
    <%= f.text_field :category, placeholder: "backpack, sleeping bag, or knife...", class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :name, 'Item:' %>
    <%= f.text_field :name, placeholder: "eg. ULA Circuit pack, small w/ s-shaped straps", class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :quantity, 'Quantity:' %>
    <%= f.number_field :quantity, min: 0, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :weight, 'Weight (oz.):' %>
    <%= f.number_field :weight, min: 0, step: 0.1, class: 'form-control', required: true %>
  </div>

  <%= f.hidden_field :id %>

  <%= f.submit submit_text, class: 'btn btn-primary' %>

  <%= link_to '/lists/' + params[:list_id].to_s + '/items/new', class: 'btn btn-default start-over-btn' do %>
    <i class='fa fa-repeat'></i> Start Over
  <% end %>

  <%= link_to '/lists/' + params[:list_id].to_s, class: 'btn btn-default pull-right' do %>
    <i class='fa fa-arrow-left'></i> Back to List
  <% end %>
<% end %>
